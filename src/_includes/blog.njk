---
layout: page
---
<main class="max-w-6xl mx-auto py-32">
        <div id="post-banner-image" class="w-full mx-auto"> 
            <img src="/assets/images/{{ post_image }}" 
                    alt="{{ title }}" 
                    class="h-96 object-cover w-full shadow-xl">
        </div>
    <div id="post-body" class="bg-white text-center px-16 py-24">
        <div id="post-header" class="mb-8">
            <h1 class="text-4xl font-bold my-4 text-gray-900 w-10/12 mx-auto">{{ title }}</h1>
            <h3 class="text-xl font-semibold text-gray-700">{{ description }}</h3>
        </div>
        <hr class="w-8/12 mx-auto">
        <div id="post-details" 
            class="flex flex-row justify-between w-8/12 mx-auto my-3
                    text-gray-500 font-semibold">
                <span class="text-sm">{{ readingtime }} | {{ publishdate }}</span>
            
            <div class="flex flex-row items-center gap-x-6 mx-4 text-sm">
                <button onclick="window.App.copyPageUrl()" 
                    class="hover:text-gray-600">
                    <i class="fa-solid fa-copy"></i>
                </button>
            </div>
        </div>
        <hr class="w-8/12 mx-auto">
        <div id="post-content" class="w-10/12 mx-auto mt-16 mb-8 text-justify">
            <article class="prose lg:prose-lg mx-auto">
                {{ content | safe }}
            </article>
        </div>
        <hr class="w-8/12 mx-auto">
        <div id="post-tags" 
            class="w-8/12 mx-auto my-2 text-sm font-semibold text-gray-900">
            <ul class="flex flex-row flex-wrap gap-x-4 gap-y-2 mb-2">
                <li>Tags :</li>
                {% for tag in tags %}
                    <li>
                        <a href="/tags/{{ tag | slugify }}/">
                            <span class="text-xs bg-gray-200 rounded-md px-2 py-1 my-1">{{ tag }}</span>
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </div>
        <hr class="w-8/12 mx-auto">
    </div>
</main>