---
layout: page
---
<main class="max-w-6xl mx-auto pt-16">
    <div class="bg-white"> 
        <div id="post-banner" class="text-center mt-32 py-12 md:mt-16">
            <div id="post-title" class="mb-8">
                <h1 class="text-3xl font-bold my-4 text-gray-900">{{ title }}</h1>
                <h3 class="text-xl font-semibold text-gray-700">{{ description }}</h3>
            </div>
            <hr class="w-8/12 mx-auto">
            <div id="post-details" 
                class="flex flex-row justify-between w-8/12 mx-auto my-3
                        text-gray-500 font-semibold">
                <span class="text-sm">{{ startdate }} - {{ enddate }}</span>
                <div class="flex flex-row items-center gap-x-6 mx-4 text-sm">
                    <a href="{{ sourcecode }}" 
                        class="hover:text-gray-600">
                        <i class="fa-solid fa-arrow-up-right-from-square"></i>
                    </a>
                    <button onclick="copyPageUrl()" 
                        class="hover:text-gray-600">
                        <i class="fa-solid fa-copy"></i>
                    </button>
                </div>
            </div>
            <hr class="w-8/12 mx-auto">
            <div id="post-banner-image" class="mt-12 mb-8 w-7/12 mx-auto"> 
                <img src="/assets/images/{{ projectimage }}" 
                        alt="{{ title }}" 
                        class="h-auto">
            </div>
            <div id="post-content" class="w-8/12 mx-auto mt-16 mb-8 text-justify">
                <article class="prose lg:prose-lg mx-auto">
                    {{ content | safe }}
                </article>
            </div>
            <hr class="w-8/12 mx-auto">
            <div id="post-tags" class="w-8/12 mx-auto my-2">
                <ul class="flex flex-row flex-wrap gap-x-4 gap-y-2">
                    <li class="text-sm text-gray-900 font-semibold">Tags :</li>
                    {% for tag in tags %}
                        <li class="text-sm text-gray-900 font-semibold">
                            {# <a href="/tags/{{ tag | slugify }}/">
                                {{ tag }}
                            </a> #}
                            <a href="/tags/{{ tag | slugify }}/">
                                <span class="text-xs font-semibold bg-gray-200 rounded-md px-2 py-1 m-1">{{ tag }}</span>
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
            <hr class="w-8/12 mx-auto">
        </div>
    </div>

    <script>
        const copyPageUrl = () => {
            const ta = document.createElement("textarea");
            ta.value = window.location.href;
            ta.setAttribute(`readonly`, ``);
            ta.style.position = `absolute`;
            ta.style.left = `-9999px`;
            document.body.appendChild(ta);            
            ta.select();
            ta.setSelectionRange(0, 99999)
            document.execCommand("copy");
            document.body.removeChild(ta);
        }
    </script>

</main>