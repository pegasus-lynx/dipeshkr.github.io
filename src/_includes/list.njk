        <div id="list-content" class="w-10/12 mx-auto text-left">
            {% for post in collections[selectedtag] %}
                <div class="flex flex-row h-72 w-full mb-16">
                    <div class="h-full w-4/12">
                            <img src="/assets/images/{{ post.data.post_image }}" 
                                 class="object-cover w-full h-full" alt="{{ post.data.title }}"> 
                    </div>
                    <div class="py-4 px-12 w-8/12 flex flex-col justify-between">
                        <div id="card-header">
                            <p class="text-3xl font-bold font-opensans mb-2">
                                <a href="{{ post.url }}">{{ post.data.title }}</a>
                            </p>
                            <p class="text-base mb-4">
                                {{ post.data.description }}
                            </p>
                        </div>
                        <div id="card-extradetails" class="text-sm font-semibold">
                            <div class="flex flex-row justify-between text-gray-500 mb-2">
                                {% if 'Project' in post.data.tags %}
                                <span>{{ post.data.startdate }} - {{ post.data.enddate }}</span>
                                <span>
                                    <a href="{{ post.data.sourcecode }}" class="hover:text-gray-600">
                                        <i class="fa-solid fa-arrow-up-right-from-square"></i>
                                    </a>
                                </span>
                                {% else %}
                                <span>{{ post.data.readingtime }}</span>
                                <span>{{ post.data.publishdate }}</span>
                                {% endif %}
                            </div>

                            <hr class="mb-2">
                            <ul class="flex flex-row flex-wrap gap-x-2 gap-y-4 mb-2">
                                {% for tag in post.data.tags %}
                                    <li class="text-gray-900">
                                        <a href="/tags/{{ tag | slugify }}/">
                                            <span class="text-xs 
                                                        bg-gray-200 rounded-md px-2 py-1 my-1">
                                                {{ tag }}
                                            </span>
                                        </a>
                                    </li>
                                {% endfor %}
                            </ul>
                            <hr class="mb-2">
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</main>