---
title: Contact
permalink: /contact/
---
<main class="max-w-6xl mx-auto pt-16 pb-32 md:py-32">
    <div id="contact-body" class="bg-white text-center p-8 md:p-16 shadow-lg">
        <div id="contact-header" class="mb-8 md:mb-16">
            <h1 class="text-4xl md:text-6xl font-bold font-opensans">Get In Touch</h1>
        </div>
        <div id="contact-content" class="flex flex-col text-left
                                                md:flex-row">
            <div class="mb-12 md:mb-0 py-8 md:py-12 
                        border-b-2 border-t-2 md:border-t-0 md:border-b-0 md:border-r-2 w-full md:w-4/12 mx-auto">
                <ul class="w-8/12 md:w-10/12 text-base mx-auto">
                    {% for social in info.socials %}
                    <li class=" group my-3 md:my-0 md:mb-4">
                        <a href="{{ social.url }}" target="_blank" 
                            rel="noopener noreferrer">
                            <span class="mx-2">
                                <i class="{{ social.icon }} fa-lg"></i>
                            </span>
                            <span class="font-semibold group-hover:underline">{{ social.name }}</span>
                        </a>
                    </li>
                    {% endfor %}
                </ul>
            </div>
            <div class="w-full md:w-8/12 mx-auto px-4 md:px-16">
                <form action="https://data.endpoint.space/clpp139hq001408jwdjjr4cms"
                        method="POST" class="flex flex-col mx-auto gap-y-2">
                    <label for="name" class="font-semibold text-sm w-32">Name</label>
                    <input type="text" name="name" id="name" required 
                            class="bg-gray-200 p-2"/>
                    <label for="email" class="font-semibold text-sm">Email</label>
                    <input type="text" name="email" id="email" required 
                            class="bg-gray-200 p-2"/>
                    <label for="message" class="font-semibold text-sm">Message</label>
                    <textarea name="message" id="message" required rows="5" 
                            class="bg-gray-200 p-2"> </textarea>
                    <button class="font-semibold rounded-md p-2 mx-auto mt-8 bg-gray-400 w-64 text-center">Send</button>
                </form>
            </div>
        </div>
    </div>
</main>