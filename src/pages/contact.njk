---
title: Contact
permalink: /contact/
---
<main class="main-style">
    <div id="contact-body" class="body-style">
        <div id="contact-header" class="mb-8 md:mb-16">
            <h1 class="page-title-font-style">Get In Touch</h1>
        </div>
        <div id="contact-content" class="flex flex-col text-left
                                                md:flex-row">
            <div class="mb-12 md:mb-0 py-8 md:py-12 
                            border-b-2 border-t-2 
                            md:border-t-0 md:border-b-0 md:border-r-2 
                            w-full md:w-4/12 mx-auto">
                <ul class="w-8/12 md:w-10/12 text-base mx-auto">
                    {% for social in info.socials %}
                    <li class="group my-3 md:my-0 md:mb-4">
                        <a href="{{ social.url }}" target="_blank" 
                            rel="noopener noreferrer">
                            <span class="mx-2">
                                <i class="{{ social.icon }} fa-lg"></i>
                            </span>
                            <span class="font-semibold group-hover:underline">{{ social.name }}</span>
                        </a>
                    </li>
                    {% endfor %}
                </ul>
            </div>
            <div class="w-full md:w-8/12 mx-auto px-4 md:px-16">
                <form action="https://data.endpoint.space/clpp139hq001408jwdjjr4cms"
                        method="POST" class="flex flex-col mx-auto gap-y-2">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" name="name" id="name" required 
                            class="form-input"/>
                    <label for="email" class="form-label">Email</label>
                    <input type="text" name="email" id="email" required 
                            class="form-input"/>
                    <label for="message" class="form-label">Message</label>
                    <textarea name="message" id="message" required rows="5" 
                            class="form-input"> </textarea>
                    <button class="font-semibold rounded-md p-2 mx-auto mt-8 bg-gray-400 dark:bg-neutral-400 dark:text-black w-64">Send</button>
                </form>
            </div>
        </div>
    </div>
</main>