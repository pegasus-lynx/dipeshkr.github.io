---
title: Contact
---
<main class="max-w-6xl mx-auto pt-16">
    <div id="contact-body" class="bg-white text-center mt-32 pb-12">
        <div id="contact-header" class="pt-8 pb-8 text-center">
            <p class="text-6xl font-bold mt-8 mb-8">Get In Touch</p>
        </div>
        <div id="contact-content" class="flex flex-row">
            <div class="text-center py-12 border-r-2 w-4/12 mx-auto">
                {# <h3 class="text-2xl font-bold mb-8">
                    Social Links
                </h3> #}
                <ul class="text-left mx-auto w-10/12">
                    {% for social in info.socials %}
                    <li class="mb-4 px-2">
                            <a href="{{ social.url }}" target="_blank" 
                                    rel="noopener noreferrer">
                        <span class="mx-2">
                                <i class="{{ social.icon }}"></i>
                        </span>
                        <span class="font-semibold text-sm">{{ social.name }}</span>
                            </a>
                    </li>
                    {% endfor %}
                </ul>
            </div>
            <div class="text-left w-8/12 mx-auto px-16">
                <form action="https://data.endpoint.space/clpp139hq001408jwdjjr4cms"
                        method="POST" class="flex flex-col mx-auto gap-y-2">
                    <label for="name" class="font-semibold text-sm w-32">Name</label>
                    <input type="text" name="name" id="name" required 
                            class="bg-gray-200 p-2"/>
                    <label for="email" class="font-semibold text-sm">Email</label>
                    <input type="text" name="email" id="email" required 
                            class="bg-gray-200 p-2"/>
                    <label for="message" class="font-semibold text-sm">Message</label>
                    <textarea name="message" id="message" required rows="5" 
                            class="bg-gray-200 p-2"> </textarea>
                    <button class="font-semibold rounded-md p-2 mx-auto mt-8 bg-gray-400 w-64 text-center">Send</button>
                </form>
            </div>
        </div>
    </div>
</main>