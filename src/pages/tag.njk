{# ---
pagination:
  data: collections
  size: 1
  alias: tag
layout: page
permalink: /tags/{{ tag }}/
--- #}

<main class="max-w-7xl mx-auto pt-16">
    {% set selectedtag = tag %}
    <div id="post-body" class="bg-white text-center mt-16 pb-12">

        <div id="list-header" class="pt-8 pb-8">
            <h1 class="font-bold text-4xl">Tagged - "{{ tag }}"</h1>
        </div>

        {# Figure this out later #}
        {% if showtagslist == true %}
            <hr class="w-8/12 mx-auto">
            <div id="post-tags" class="w-8/12 mx-auto my-2">
                <ul class="flex flex-row flex-wrap gap-x-4 gap-y-2">
                    <li class="text-sm text-gray-900 font-semibold">Selected Tags :</li>
                    {% for tag in selectedtags %}
                        <li class="text-sm text-gray-900 font-semibold">
                            <a href="/tags/{{ tag | slugify }}/">
                                <span class="text-xs font-semibold bg-gray-200 rounded-md px-2 py-1 m-1">{{ tag }}</span>
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
            <hr class="w-8/12 mx-auto">
        {% endif %}

        <div id="list-content" class="w-10/12 mx-auto mt-16 text-justify">
            {% set taglist = collections[ tag ] %}
            {% for post in taglist %}
                <div class="mb-16 flex flex-row h-72 w-full">
                    <div class="h-full w-4/12">
                            <img src="/assets/images/{{ post.data.post_image }}" 
                                 class="object-cover w-full h-full" alt="{{ post.data.title }}"> 
                    </div>
                    <div class="pt-8 pr-8 pl-12 w-8/12 flex flex-col justify-between">
                        <div>
                            <p class="text-3xl mb-4 font-bold">
                                <a href="{{ post.url }}">{{ post.data.title }}</a>
                            </p>
                            <p class="text-base mb-4">
                                {{ post.data.description }}
                            </p>
                        </div>
                        <div>
                            <hr class="mb-2">
                            <ul class="flex flex-row flex-wrap gap-x-2 gap-y-2">
                                {% for stag in post.data.tags %}
                                    <li class="text-sm text-gray-900 font-semibold">
                                        <a href="/tags/{{ stag | slugify }}/">
                                            <span class="text-xs font-semibold 
                                                        bg-gray-200 rounded-md px-2 py-1 m-1">
                                                {{ stag }}
                                            </span>
                                        </a>
                                    </li>
                                {% endfor %}
                            </ul>
                            <hr class="mt-2 mb-2">
                            <div class="flex flex-row justify-between text-sm text-gray-500">
                                {% for stag in post.data.tags %}
                                    {% if 'Project' == stag %}
                                    <span>{{ post.data.startdate }} - {{ post.data.enddate }}</span>
                                    <span>
                                        <a href="{{ post.data.sourcecode }}" class="hover:text-gray-600">
                                            <i class="fa-solid fa-arrow-up-right-from-square"></i>
                                        </a>
                                    </span>
                                    {% else %}
                                    <span>{{ post.data.readingtime }}</span>
                                    <span>{{ post.data.publishdate }}</span>
                                    {% endif %}
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</main>